@model WeatherViewModel
@{
    ViewData["Title"] = "Get Weather";
}

    <h4>Your Local Weater Prediction For @DateTime.Now.ToShortDateString()</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                <h4>Temp</h4>
            </th>
            
            <th>
                <h4>Feels Like</h4>
            </th>
            <th>
                <h4>Pressure</h4>
            </th>
            <th>
                <h4>Sea Level</h4>
            </th>
            <th>
                <h4>Wind Speed</h4>
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
       
       
            <tr>
                <td>
                   @Model.mainTemp
                </td>
               
                <td>
                   @Model.feelsLike

                </td>
                <td>
                    @Model.pressure
                </td>
                <td>
                    @Model.seaLevel
                </td>
                <td>
                    @Model.windSpeed
                </td>

            </tr>
       
    </tbody>
</table>
