@model TidePredictionViewModel
@{
    ViewData["Title"] = "GetTide";
    
}

    <h1>Your Local Tide Information for @DateTime.Now.ToShortDateString()</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <h4>Time</h4>
            </th>
            <th>
                <h4>Height</h4>
            </th>
            <th>
                <h4>Tide</h4>
            </th>
            

            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i =0; i < Model.Time.Count; i++)
        {
            <tr>
                <td>
                    @Model.Time[i]
                </td>
                <td>
                   @Model.Height[i]
                </td>
                <td>
                   @Model.Tide[i] 
                   
                </td>
               

               
            </tr>
        }
    </tbody>
</table>
