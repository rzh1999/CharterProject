@model Charter.Models.BaitsModel

@{
    ViewData["Title"] = "Create Bait";
}

<h4>Enter in your bait information</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-action="CreateBait" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BaitType" class="control-label"></label>
                <input asp-for="BaitType" class="form-control" />
                <span asp-validation-for="BaitType" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaitPrice" class="control-label"></label>
                <input asp-for="BaitPrice" class="form-control" />
                <span asp-validation-for="BaitPrice" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
