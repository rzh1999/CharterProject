@model Charter.Models.MessagesModel

@{
    ViewData["Title"] = "Create Message";
}



<h4>Thank you for doing business with us please feel free to leave a comment about your experience.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMessage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScreenName" class="control-label"></label>
                <input asp-for="ScreenName" class="form-control" />
                <span asp-validation-for="ScreenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
